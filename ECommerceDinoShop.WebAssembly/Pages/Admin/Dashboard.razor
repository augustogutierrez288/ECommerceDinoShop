@page "/dashboard"
@layout DashboardLayout

@inject IDashboardService _dashboardService

@attribute [Authorize(Roles = "Administrador")];


<h2 class="fs-3 fw-semibold text-start mt-3 mb-4">
    Dashboard<br />
    Panel administrativo
</h2>

<section class="d-flex justify-content-between align-items-center gap-3 mt-1">

    <article class="card text-bg-primary mb-3" style="max-width: 15rem;">
      <header class="card-header">Ventas</header>
      <main class="card-body">
        <h5 class="card-title fs-6 fw-semibold">Cantidad de ventas</h5>
        @if (loading)
            {
                <div class="spinner-border spinner-border-sm" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
                <div class="spinner-grow spinner-grow-sm" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
            }
            else
            {
                <p class="card-text">@dashboard.TotalOrders</p>
            }
      </main>
    </article>

    <article class="card text-bg-success mb-3" style="max-width: 15rem;">
      <header class="card-header">Venta bruta</header>
      <main class="card-body">
        <h5 class="card-title fs-6 fw-semibold">Ingresos por ventas</h5>
            @if (loading)
            {
                <div class="spinner-border spinner-border-sm" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
                <div class="spinner-grow spinner-grow-sm" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
            }
            else
            {
                <p class="card-text">$@dashboard.TotalRevenue</p>
            }
      </main>
    </article>

    <article class="card text-bg-danger mb-3" style="max-width: 15rem;">
      <header class="card-header">Productos</header>
      <main class="card-body">
        <h5 class="card-title fs-6 fw-semibold">Productos en stock</h5>
        @if (loading)
            {
                <div class="spinner-border spinner-border-sm" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
                <div class="spinner-grow spinner-grow-sm" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
            }
            else
            {
                <p class="card-text">@dashboard.TotalProducts</p>
            }
      </main>
    </article>

    <article class="card text-bg-warning mb-3" style="max-width: 15rem;">
      <header class="card-header">Clientes</header>
      <main class="card-body">
        <h5 class="card-title fs-6 fw-semibold">Total de clientes</h5>
        @if (loading)
            {
                <div class="spinner-border spinner-border-sm" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
                <div class="spinner-grow spinner-grow-sm" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
            }
            else
            {
                <p class="card-text">@dashboard.TotalCustomers</p>
            }
      </main>
    </article>

</section>

@code {
    private DashboardDTO dashboard = new DashboardDTO();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        var response = await _dashboardService.Resume();
        if (response.IsCorrect)
        {
            dashboard = (DashboardDTO)response.Result!;
            loading = false;
        }
    }
}